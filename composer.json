{
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Flagmer\\": "src/Flagmer/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "vlucas/phpdotenv": "^5.1",
    "qxsch/worker-pool": "^1.6",
    "ext-pcntl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "phpstan/phpstan": "^0.12.37"
  },
  "scripts": {
    "test": [
      "@php ./vendor/phpunit/phpunit/phpunit --configuration ./phpunit.xml"
    ],
    "phpstan": [
      "./vendor/bin/phpstan analyse -c ./phpstan.neon"
    ]
  }
}
